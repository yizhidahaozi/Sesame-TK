<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- AppBar 背景色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Toolbar 文字颜色 -->
        <item name="titleTextColor">@color/active_text</item>
        <item name="subtitleTextColor">@color/active_text</item>
        <!-- 状态栏透明 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- 导航栏颜色 -->
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <!-- 菜单样式 -->
        <item name="actionOverflowMenuStyle">@style/MenuTheme</item>
    </style>



    <style name="MenuTheme">
        <item name="android:textColorSecondary">@color/textColorPrimary</item>
        <item name="android:popupBackground">@drawable/menu_background</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:itemBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="Widget.App.Button.Main" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="backgroundTint">@color/main_button</item>
        <item name="rippleColor">@color/main_button_pressed</item>
        <item name="iconTint">@null</item>
        <item name="iconGravity">top</item>
        <item name="cornerRadius">12dp</item>
        <item name="iconPadding">2dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="iconSize">48dp</item>
        <item name="android:layout_width">113dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
