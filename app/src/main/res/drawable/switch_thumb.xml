<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--switch按钮圆thumb的样式-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke
                android:width="0dp"
                android:color="@color/color_alpha" />
            <solid android:color="@color/switch_white" />
        </shape>
    </item>

    <item>
        <selector >
            <item android:state_checked="true">
                <shape>
                    <size
                        android:width="18dp"
                        android:height="18dp" />
                    <corners android:radius="10dp" />
                    <solid android:color="@color/orange" />
                    <stroke
                        android:width="5dp"
                        android:color="@color/color_alpha" />
                </shape>
            </item>

            <item>
                <shape>
                    <size
                        android:width="18dp"
                        android:height="18dp" />
                    <corners android:radius="10dp" />
                    <solid android:color="@color/switch_off" />
                    <stroke
                        android:width="12dp"
                        android:color="@color/color_alpha" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>